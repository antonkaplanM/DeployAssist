# ===== Application Configuration =====
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# ===== SSL/TLS Configuration =====
# IMPORTANT: Configure SSL properly for security!
#
# Options:
#   strict (default)  - Use system CA certificates (most secure)
#   custom            - Use custom CA certificates (for corporate environments)
#   disabled          - Disable SSL validation (INSECURE - dev only!)
#
SSL_MODE=strict

# If using SSL_MODE=custom, provide path to CA certificate:
# SSL_CA_PATH=./certs/corporate-ca.pem

# ===== Database Configuration (PostgreSQL) =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deployment_assistant
DB_USER=app_user
DB_PASSWORD=secure_password_123
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ===== Salesforce Configuration =====
# Required: Salesforce OAuth credentials
SF_LOGIN_URL=https://login.salesforce.com
SF_CLIENT_ID=your_client_id_here
SF_CLIENT_SECRET=your_client_secret_here
SF_REDIRECT_URI=http://localhost:8080/auth/salesforce/callback
SF_TOKEN_FILE=.salesforce_auth.json

# ===== SML Integration Configuration =====
# SML (Service Management Layer) integration for product entitlements
# Note: SML authentication is cookie-based and configured through the UI (Settings page)
# No environment variables needed - configuration is stored in .sml_config.json
# Supported environments: euw1 (https://api-euw1.rms.com), use1 (https://api-use1.rms.com)

# ===== Atlassian/Jira Configuration (Optional) =====
# Only needed if using Jira integration
# ATLASSIAN_EMAIL=your.email@company.com
# ATLASSIAN_API_TOKEN=your_api_token_here
# ATLASSIAN_SITE_URL=https://yourcompany.atlassian.net
# ATLASSIAN_CLOUD_ID=your_cloud_id_here

# ===== Redis Configuration (Optional) =====
# Only needed if using Redis for caching
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ===== Authentication Configuration =====
# JWT Secret for token signing (REQUIRED - use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production

# Default admin user credentials
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password
DEFAULT_ADMIN_FULL_NAME=System Administrator

# ===== Feature Flags =====
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_EXPIRATION_MONITOR=true
ENABLE_GHOST_ACCOUNTS=true

