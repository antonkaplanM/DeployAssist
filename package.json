{
  "name": "deployment-assistant",
  "version": "1.0.0",
  "description": "A deployment assistant app with Node.js and modern UI",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:ci": "jest --coverage --runInBand",
    "pw:install": "playwright install"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "jsforce": "^1.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.47.2",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "nodejs",
    "express",
    "deployment-assistant",
    "integrations"
  ],
  "author": "",
  "license": "MIT"
}
