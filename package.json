{
  "name": "deployment-assistant",
  "version": "1.0.0",
  "description": "A deployment assistant app with Node.js and modern UI",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "npm run build:css && node app.js",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:ci": "jest --coverage --runInBand",
    "pw:install": "playwright install"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "jsforce": "^1.11.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "redis": "^5.8.2",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.47.2",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "postcss": "^8.5.6",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.18"
  },
  "keywords": [
    "nodejs",
    "express",
    "deployment-assistant",
    "integrations"
  ],
  "author": "",
  "license": "MIT"
}
